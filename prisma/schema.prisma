generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model PriceReminder {
  id               Int       @id @default(autoincrement())
  ad_soyad         String
  mail_adresi      String
  urun_adi         String
  fiyat_tipi       String
  istenen_fiyat    Float
  created_date     DateTime  @default(now())
  last_check_date  DateTime?
  send_mail        Boolean   @default(false)
}